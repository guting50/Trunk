    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_cart_Allprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="合计:"/>

        <TextView
            android:id="@+id/tv_cart_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_cart_Allprice"
            android:singleLine="true"
            android:text="¥ "
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/tv_cart_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_cart_total"
            android:gravity="right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="已选0件商品"/>
        <!--<TextView-->
        <!--android:id="@+id/tv1"-->
        <!--android:text="订单金额:"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yunpu"
            android:visibility="invisible"/>
        <!--<TextView-->
        <!--android:id="@+id/tv2"-->
        <!--android:text="获得积分:"-->
        <!--android:layout_below="@id/tv1"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/tv_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yunpu"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_settle_acounts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/yunpu"
            android:gravity="center"
            android:text="结算"
            android:textSize="@dimen/small_button_font_size"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <com.maimengmami.waveswiperefreshlayout.WaveSwipeRefreshLayout
        android:id="@+id/swf_goodscon_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_cart"
        >

        <ListView
            android:id="@+id/lv_goodssearchactivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@color/lightgray"
            android:dividerHeight="1px"/>
    </com.maimengmami.waveswiperefreshlayout.WaveSwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_head_goodsearchactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yunpu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_back_goodssearchactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/left_btn_n"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:text="   "
            android:textColor="@color/white"
            android:textSize="@dimen/head_back_font_size"/>

        <TextView
            android:id="@+id/tv_title_goodssearchactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="搜索商品"
            android:textColor="@color/white"
            android:textSize="@dimen/head_title_font_size"/>

        <TextView
            android:id="@+id/tv_choose_member_goodssearchactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_choose_member_goodssearchactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/member_face"/>

        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_back_goodssearchactivity"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border_view_radius"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_membercard_goodssearchactivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:gravity="left|center_vertical"
                android:hint="请输入商品分类/名称/编号进行查询..."
                android:inputType="number"
                android:maxLength="50"
                android:padding="@dimen/editText_textview_padding"
                android:singleLine="true"
                android:textColorHint="@color/lightgray"
                android:textCursorDrawable="@drawable/shape_color_cursor"
                android:textSize="@dimen/edittext_textview_font_size"/>

            <ImageView
                android:id="@+id/iv_scan_goodssearchactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/add_code"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
