<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_warehousing_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/color_main_text_black"
                android:textSize="@dimen/dimen_main_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="编码："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_warehousing_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="规格："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_warehousing_format"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="单位："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_warehousing_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="数量："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <EditText
                android:id="@+id/et_item_warehousing_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_item_num"
                android:layout_weight="1"
                android:background="@drawable/common_edit_background"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="进价："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <EditText
                android:id="@+id/et_item_warehousing_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_edit_background"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/item_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_cancel" />
    </RelativeLayout>

</LinearLayout>
