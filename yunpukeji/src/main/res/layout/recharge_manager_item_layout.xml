<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tv_grade_item_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="默认等级"
        android:textColor="@color/color_main_text_black"
        android:textSize="@dimen/dimen_main_size" />

    <ImageView
        android:id="@+id/iv_item_recharge_manager"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/right_tw" />

    <TextView
        android:id="@+id/tv_overdue_flag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/iv_item_recharge_manager"
        android:background="@drawable/ysl_over_data"
        android:visibility="invisible"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>


</RelativeLayout>
