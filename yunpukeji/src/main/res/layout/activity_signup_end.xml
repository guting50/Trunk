<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.zhiluo.android.yunpu.login.activity.SignupEndActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/imv_singuptwoback_activity"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_margin="@dimen/loginmagin"-->
            <!--android:background="@mipmap/backlight" />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@mipmap/singupend"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btn_singupend_activity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_height"
            android:layout_margin="20dp"
            android:background="@drawable/button_selector_yunpu"
            android:gravity="center"
            android:text="立即登录"
            android:textSize="@dimen/dimen_button_size"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/loginmagin"
        android:textSize="10sp"
        android:gravity="center"
        android:text="@string/bottom" />
</LinearLayout>
