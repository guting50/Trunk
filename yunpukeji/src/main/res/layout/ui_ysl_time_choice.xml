<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ysl_main_style">

    <RelativeLayout
        android:id="@+id/rl_title_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height">

        <TextView
            android:id="@+id/tv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/left_btn_n"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:text="   "
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />

        <ImageView
            android:id="@+id/iv_title_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/loginmagin2"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/filtrate_32" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_title_search"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/rl_title_title"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_title_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv_drop_down"
                android:gravity="center_vertical|right"
                android:paddingEnd="10dp"
                android:text="今日"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_title_size" />

            <ImageView
                android:id="@+id/iv_drop_down"
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_drop_down" />

        </RelativeLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_parting_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_main_size" />

            <TextView
                android:id="@+id/tv_title_first_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="2dp"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_title_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_second_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_main_size" />

            <TextView
                android:id="@+id/tv_title_second_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="2dp"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_title_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

