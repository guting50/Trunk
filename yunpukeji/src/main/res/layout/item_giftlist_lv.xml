<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="100dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:src="@mipmap/salegoods" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_gift"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/loginmagin2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_giftname_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" />
        <TextView
            android:id="@+id/tv_giftnum_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" />
        <TextView
            android:id="@+id/tv_giftintegral_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" />
        <TextView
            android:id="@+id/tv_gifttype_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" />
    </LinearLayout>
</RelativeLayout>