<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_check_goods_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Android书籍"
                android:textColor="@color/color_main_text_black"
                android:textSize="@dimen/dimen_main_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="编码："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_check_goods_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="AN6788271818"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="分类："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_check_goods_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text=""
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="规格："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_check_goods_format"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text=""
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="单位："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_check_goods_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text=""
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="库存："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_check_goods_stock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="单价："
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />

            <TextView
                android:id="@+id/tv_item_check_goods_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="0.00"
                android:textColor="@color/color_item_text_gray"
                android:textSize="@dimen/dimen_item_size" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_item_check_good"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="6dp"
        android:button="@null"
        android:drawableRight="@drawable/vipchose_selctor" />
</LinearLayout>
