<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login.activity.NewpasswordActivity">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/ysl_main_style">

        <TextView
            android:id="@+id/tv_newpassworedback_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/left_btn_n"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:text="   "
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />

        <TextView
            android:id="@+id/tv_title_memberrechargeactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="重置密码"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/rl_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:layout_marginStart="14dp"
                    android:text="账    号" />

                <EditText
                    android:id="@+id/edi_newpasswordphone_activity"
                    android:textColor="@color/color_main_text_black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/head_height"
                    android:background="@null"
                    android:hint="请输入手机号或邮箱"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/color_text_hint_gray"
                    android:textCursorDrawable="@drawable/shape_color_cursor"
                    android:textSize="@dimen/dimen_main_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightgray" />


            <LinearLayout
                android:id="@+id/rl_yzm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/tv_yanzheng"
                    style="@style/TextViewAddMember"
                    android:layout_marginStart="14dp"
                    android:text="验证码"
                    />

                <EditText
                    android:textColor="@color/color_main_text_black"
                    android:id="@+id/edi_singtwonum_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/head_height"
                    android:layout_margin="@dimen/loginmagin"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请输入您的验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="@dimen/loginmagin"
                    android:textColorHint="@color/color_text_hint_gray"
                    android:textCursorDrawable="@drawable/shape_color_cursor"
                    android:textSize="@dimen/dimen_main_size"
                    />

                <TextView
                    android:id="@+id/tet_newpasswordget_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="@dimen/loginmagin"
                    android:background="@drawable/round_button"
                    android:enabled="true"
                    android:text="获取验证码"
                    android:padding="@dimen/loginmagin"
                    android:textColor="@color/white" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightgray" />




            <Button
                android:id="@+id/btn_newpasswordnext_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/head_height"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_selector_yunpu"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_button_size" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
