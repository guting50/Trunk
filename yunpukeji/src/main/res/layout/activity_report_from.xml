<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.zhiluo.android.yunpu.statistics.ReportFromActivity">

    <include layout="@layout/no_confirm_title_layout" />

    <RelativeLayout
        android:id="@+id/rl_report_from_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height">

        <TextView
            style="@style/TextViewAddMember"
            android:text="会员账户" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@mipmap/right_tw" />
    </RelativeLayout>

    <TextView style="@style/LineStyle" />
    <RelativeLayout
        android:id="@+id/rl_report_from_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height">

        <TextView
            style="@style/TextViewAddMember"
            android:text="订单记录" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@mipmap/right_tw" />
    </RelativeLayout>

    <TextView style="@style/LineStyle" />
    <RelativeLayout
        android:id="@+id/rl_report_from_ticheng"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height">

        <TextView
            style="@style/TextViewAddMember"
            android:text="员工提成" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@mipmap/right_tw" />
    </RelativeLayout>

    <TextView style="@style/LineStyle" />
    <RelativeLayout
        android:id="@+id/rl_report_from_recommend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height">

        <TextView
            style="@style/TextViewAddMember"
            android:text="推荐返利" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@mipmap/right_tw" />
    </RelativeLayout>

    <TextView style="@style/LineStyle" />
</LinearLayout>
