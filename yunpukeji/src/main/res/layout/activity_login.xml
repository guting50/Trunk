<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login.activity.LoginActivity">
    
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@mipmap/bg">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:src="@mipmap/yunshangpulogo"/>

        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="42dp"
            android:text="云上铺会员收银系统"
            android:textColor="@color/white"
            android:textSize="22sp"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/ll_loginactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:id="@+id/rl_username_loginactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_marginBottom_and_Top"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/tv_username_info_loginactivity"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/acount33"
                android:gravity="center" />

            <EditText
                android:id="@+id/et_username_loginactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_username_info_loginactivity"
                android:background="@color/background"
                android:hint="请输入手机号或邮箱"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textColor="@color/color_main_text_black"
                android:textColorHint="@color/color_text_hint_gray"
                android:textCursorDrawable="@drawable/shape_color_cursor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/tv_clean_acount_loginactivity"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/clean_acount2"
                android:gravity="center" />

            <!--<TextView-->
                <!--android:id="@+id/tv_clean_acount_loginactivity"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:drawableLeft="@mipmap/clean_acount"-->
                <!--android:focusableInTouchMode="true"-->
                <!--android:gravity="center" />-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password_loginactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_username_loginactivity"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="@dimen/layout_marginBottom_and_Top">

            <ImageView
                android:id="@+id/tv_password_info_loginactivity"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/password2"
                android:textColor="@color/color_main_text_black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_password_loginactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_password_info_loginactivity"
                android:background="@color/background"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/color_main_text_black"
                android:textColorHint="@color/color_text_hint_gray"
                android:textCursorDrawable="@drawable/shape_color_cursor"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/tv_clean_password"
                android:layout_width="22sp"
                android:layout_height="22sp"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pwd_hidden"
                android:gravity="center" />

            <!--<TextView-->
                <!--android:id="@+id/tv_clean_password"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:drawableLeft="@mipmap/clean_acount"-->
                <!--android:focusableInTouchMode="true"-->
                <!--android:gravity="center" />-->


        </RelativeLayout>

        <View
            android:id="@+id/view_loginactivity"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/rl_password_loginactivity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/lightgray" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rl_password_loginactivity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/lightgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lll_fog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43px"
        android:layout_below="@id/ll_loginactivity"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_rember_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text=""
            android:textColor="@color/gray"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/rember_password"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cb_rember_pw"
            android:text="记住密码"
            android:textColor="@color/gray"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_nopassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="忘记密码？"
            android:textColor="@color/gray"
            android:textSize="14sp"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/l_layouta"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:layout_below="@id/lll_fog"
        android:layout_marginTop="43px"
        android:layout_marginRight="58px"
        android:layout_marginLeft="58px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tologin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_shape_new"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_button_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_layouta"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_isacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:text="还没有账号？"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_main_size"
            />

        <TextView
            android:id="@+id/tv_tosignup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="立即注册"
            android:textColor="#fe6634"
            android:textSize="@dimen/dimen_main_size"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/loginmagin"
        android:gravity="bottom|center_horizontal"
        android:text="@string/bottom"
        android:textColor="@color/color_text_hint_gray"
        android:textSize="10dp" />
</RelativeLayout>
