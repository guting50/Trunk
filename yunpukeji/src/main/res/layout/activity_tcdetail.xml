<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiluo.android.yunpu.ui.activity.tc.TCDetailActivity">

    <RelativeLayout
        android:id="@+id/rl_tc_detail_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:background="@drawable/ysl_main_style">

        <include layout="@layout/overall_backbutton_single_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="套餐详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />

        <ImageView
            android:id="@+id/iv_tc_detail_menu"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/loginmagin"
            android:src="@mipmap/more" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewAddMember"
                            android:text="套餐编号" />

                        <TextView
                            android:id="@+id/tv_tc_detail_code"
                            style="@style/EditTextStyleAddMember"
                            android:layout_weight="1"
                            android:paddingRight="10dp" />

                    </LinearLayout>

                    <View style="@style/LineStyle_add" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewAddMember"
                            android:text="套餐名称" />

                        <TextView
                            android:id="@+id/tv_tc_detail_name"
                            style="@style/EditTextStyleAddMember" />

                    </LinearLayout>

                </LinearLayout>


                <com.zhiluo.android.yunpu.goods.consume.view.ShapedImageView
                    android:id="@+id/iv_upload_tv_picture"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ysl_goods"
                    app:round_radius="8dp"
                    app:shape_mode="round_rect"
                    app:stroke_color="@color/white"
                    app:stroke_width="0.6dp"/>


            </LinearLayout>

            <View style="@style/LineStyle_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:text="套餐类型" />

                <TextView
                    android:id="@+id/tv_tc_detail_type"
                    style="@style/EditTextStyleAddMember"
                    />
            </LinearLayout>


            <View style="@style/LineStyle_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:text="套餐售价" />

                <TextView
                    android:id="@+id/tv_tc_detail_price"
                    style="@style/EditTextStyleAddMember"
                    android:maxLength="7" />
            </LinearLayout>

            <View style="@style/LineStyle_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:text="套餐规格" />

                <TextView
                    android:id="@+id/tv_tc_detail_model"
                    style="@style/EditTextStyleAddMember"
                    android:maxLength="30"
                    android:maxLines="1" />
            </LinearLayout>

            <View style="@style/LineStyle_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:text="套餐折扣" />

                <TextView
                    android:id="@+id/tv_tc_detail_dis"
                    style="@style/EditTextStyleAddMember"
                    android:layout_margin="2dp"
                    android:maxLength="4" />
            </LinearLayout>

            <View style="@style/LineStyle_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:text="套餐积分" />

                <TextView
                    android:id="@+id/tv_tc_detail_integral"
                    style="@style/EditTextStyleAddMember"
                    android:layout_margin="2dp"
                    android:maxLength="10" />
            </LinearLayout>

            <View style="@style/LineStyle_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:text="套餐备注" />

                <TextView
                    android:id="@+id/tv_tc_detail_remark"
                    style="@style/EditTextStyleAddMember"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <View style="@style/LineStyle_add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewAddMember"
                    android:text="套餐商品" />

            </LinearLayout>

            <com.zhiluo.android.yunpu.ui.view.MyListView
                android:id="@+id/lv_tc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
