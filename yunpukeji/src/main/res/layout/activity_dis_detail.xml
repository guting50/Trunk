<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiluo.android.yunpu.ui.activity.discount.DisDetailActivity">
    <RelativeLayout
        android:id="@+id/rl_dis_detail_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:background="@drawable/ysl_main_style">

        <include layout="@layout/overall_backbutton_single_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />


        <ImageView
            android:id="@+id/iv_dis_detail_menu"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/loginmagin"
            android:src="@mipmap/more"  />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:orientation="horizontal">


        <TextView
            style="@style/TextViewAddMember"
            android:text="活动名称" />

        <TextView
            android:id="@+id/tv_dis_detail_name"
            style="@style/EditTextStyleAddMember" />
    </LinearLayout>

    <TextView style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:orientation="horizontal">


        <TextView
            style="@style/TextViewAddMember"
            android:text="消费金额" />

        <TextView
            android:id="@+id/tv_dis_detail_money"
            style="@style/EditTextStyleAddMember" />
    </LinearLayout>

    <TextView style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_dis_detail_type_name"
            style="@style/TextViewAddMember"
            android:text="优惠规则"
            />

        <TextView
            android:id="@+id/tv_dis_detail_give_money"
            style="@style/EditTextStyleAddMember" />
    </LinearLayout>

    <TextView style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:orientation="horizontal">


        <TextView
            style="@style/TextViewAddMember"
            android:text="赠送积分" />


        <TextView
            android:id="@+id/tv_dis_detail_give_integral"
            style="@style/EditTextStyleAddMember" />
    </LinearLayout>

    <TextView style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:orientation="horizontal">


        <TextView
            style="@style/TextViewAddMember"
            android:text="是否翻倍" />


        <TextView
            android:id="@+id/tv_dis_detail_is_double"
            style="@style/EditTextStyleAddMember" />
    </LinearLayout>

    <TextView style="@style/LineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:orientation="horizontal">


        <TextView
            style="@style/TextViewAddMember"
            android:text="有效时间" />

        <TextView
            android:id="@+id/tv_dis_detail_time"
            style="@style/EditTextStyleAddMember" />
    </LinearLayout>

    <TextView style="@style/LineStyle" />
</LinearLayout>
