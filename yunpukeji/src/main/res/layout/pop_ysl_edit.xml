<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/ysl_f"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="编辑服务"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="取消编辑"
            android:textColor="@color/text_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/ysl_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ysl_bg_radius_corner">

            <TextView
                android:id="@+id/tv_ci"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="次"
                android:textColor="@color/text_black" />

            <EditText
                android:id="@+id/ed_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_ci"
                android:background="@null"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:textColor="@color/text_black" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_ci"
                android:background="@color/gray" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ysl_bg_radius_corner">

            <CheckBox
                android:id="@+id/cb_xianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                android:button="@null"
                android:drawableLeft="@drawable/checkbox_selector"
                android:drawablePadding="4dp"
                android:text="限时"
                android:checked="true"
                android:textColor="@color/info"
                android:textSize="13sp" />

            <View
                android:id="@+id/vs"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/cb_xianshi"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/r_choise_day"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_margin="1dp"
                android:background="@color/ysl_gray">

                <ImageView
                    android:id="@+id/imgs"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ysl_next_more" />

                <TextView
                    android:id="@+id/tv_time_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/imgs"
                    android:text="天"
                    android:textColor="@color/text_black" />


            </RelativeLayout>

            <EditText
                android:id="@+id/ed_time_with_limited"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_toLeftOf="@id/r_choise_day"
                android:layout_toRightOf="@id/vs"
                android:background="@color/ysl_gray"
                android:gravity="center"
                android:hint="0"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@color/text_black" />

            <View
                android:id="@+id/vss"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/r_choise_day"
                android:background="@color/gray" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/ysl_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white">

        <View
            android:id="@+id/vie"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/vie"
            android:gravity="center"
            android:text="保存"
            android:textColor="#1286F3" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/vie"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/red" />


    </RelativeLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:background="@color/gray" />
</LinearLayout>