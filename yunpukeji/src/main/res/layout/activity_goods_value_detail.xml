<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiluo.android.yunpu.ui.activity.customvlue.GoodsValueDetailActivity">

    <RelativeLayout
        android:id="@+id/rl_goods_value_detail_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:background="@drawable/ysl_main_style">

        <include layout="@layout/overall_backbutton_single_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />

        <ImageView
            android:id="@+id/iv_goods_value_detail_menu"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/loginmagin"
            android:src="@mipmap/more" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性分类" />

            <TextView style="@style/Flag" />

            <TextView
                style="@style/EditTextStyleAddMember"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="商品属性" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性类型" />

            <TextView style="@style/Flag" />

            <TextView
                android:id="@+id/tv_goods_value_detail_type"
                style="@style/EditTextStyleAddMember"
                android:layout_margin="2dp"
                android:background="@color/background" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性名称" />

            <TextView style="@style/Flag" />

            <TextView
                android:id="@+id/tv_goods_value_detail_name"
                style="@style/EditTextStyleAddMember" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性排序" />

            <TextView style="@style/Flag" />

            <TextView
                android:id="@+id/tv_goods_value_detail_sort"
                style="@style/EditTextStyleAddMember" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="必         填" />

            <TextView
                style="@style/Flag"
                android:layout_width="40dp"
                android:visibility="invisible" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_goods_value_detail_no_empty"
                    style="@style/RadioButton"
                    android:clickable="false"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/rb_goods_value_detail_empty"
                    style="@style/RadioButton"
                    android:clickable="false"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:text="否" />
            </RadioGroup>

        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="数  据  集" />

            <TextView
                android:id="@+id/tv_goods_value_detail_data"
                style="@style/EditTextStyleAddMember"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />
    </LinearLayout>
</LinearLayout>
