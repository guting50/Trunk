<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/head_height">

    <TextView
        android:id="@+id/tv_staff_commission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="提成员工"/>

    <TextView
        android:id="@+id/tv_staff_commission_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_staff_commission"
        android:gravity="left|center_vertical"
        android:hint="无"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/yunpu"
        android:textColorHint="@color/yunpu"
        android:textSize="@dimen/edittext_font_size"/>

    <TextView
        android:id="@+id/tv_staff_commission_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:drawableRight="@mipmap/right_tw"
        android:gravity="center|right"
        android:padding="@dimen/editText_textview_padding"/>
</RelativeLayout>
