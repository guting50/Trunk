<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="2018-3-30"
        android:textColor="@color/color_item_text_gray" />

    <TextView
        android:id="@+id/tv_roder_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="单号：CZ6464731542454"
        android:textColor="@color/color_item_text_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/parent_vip_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="会员充值"
            android:textColor="@color/text_black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/parent_vip_card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:layout_toRightOf="@id/parent_vip_name"
            />
        <ImageView
            android:id="@+id/parent_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:src="@mipmap/ysl_go"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_rehange_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:text="0.00"
            android:textColor="@color/ysl_red_dip_char"
            android:textSize="18sp"
            android:drawableRight="@mipmap/right_tw"/>
    </RelativeLayout>

</RelativeLayout>