<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_grid_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        >
        <!--android:background="@drawable/ysl_pay_pup_bg"-->

        <ImageView
            android:id="@+id/item_homepage_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/adduser" />

        <TextView
            android:id="@+id/item_homepage_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_homepage_iv"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="新增会员"
            android:textColor="#646464"
            android:textSize="@dimen/dimen_main_size" />

        <ImageView
            android:id="@+id/iv_item_move"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="4dp"
            android:layout_toEndOf="@+id/item_homepage_iv"
            android:src="@drawable/more_add"
            android:visibility="invisible"
            />

    </RelativeLayout>
