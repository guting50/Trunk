<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="@dimen/goods_picture_height"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_item_choice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:padding="9dp"
            android:src="@drawable/shape_check_box_empty" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/goods_picture_height"
        android:layout_height="@dimen/goods_picture_height"
        android:padding="4dp"
        android:layout_marginLeft="10dp">

        <com.zhiluo.android.yunpu.goods.consume.view.ShapedImageView
            android:id="@+id/iv_item_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ysl_add_goods"
            app:round_radius="8dp"
            app:shape_mode="round_rect"
            app:stroke_color="@color/white"
            app:stroke_width="0.6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/goods_picture_height"
        android:layout_marginLeft="4dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tv_item_service_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="服务名称"
            android:textColor="@color/color_main_text_black"
            android:textSize="@dimen/dimen_main_size" />

        <TextView
            android:id="@+id/tv_item_service_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="0次限时0天"
            android:textColor="@color/color_main_text_black"
            android:textSize="@dimen/dimen_main_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/r_edit"
        android:layout_width="50dp"
        android:layout_height="@dimen/goods_picture_height">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ysl_edit"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
