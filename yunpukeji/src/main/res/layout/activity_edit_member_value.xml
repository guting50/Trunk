<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiluo.android.yunpu.ui.activity.customvlue.EditMemberValueActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:background="@drawable/ysl_main_style">

        <include layout="@layout/overall_backbutton_single_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />

        <TextView
            android:id="@+id/tv_edit_member_value_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/loginmagin"
            android:gravity="center_vertical"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_title_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性分类" />

            <TextView style="@style/Flag" />

            <TextView
                style="@style/EditTextStyleAddMember"
                android:layout_margin="2dp"
                android:background="@color/background"
                android:text="会员属性" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性类型" />

            <TextView style="@style/Flag" />

            <TextView
                android:id="@+id/tv_edit_member_value_type"
                style="@style/EditTextStyleAddMember"
                android:layout_margin="2dp"
                android:background="@color/background" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性名称" />

            <TextView style="@style/Flag" />

            <EditText
                android:id="@+id/et_edit_member_value_name"
                style="@style/EditTextStyleAddMember"
                android:hint="请输入属性名称" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="属性排序" />

            <TextView style="@style/Flag" />

            <EditText
                android:id="@+id/et_edit_member_value_sort"
                style="@style/EditTextStyleAddMember"
                android:hint="请输入序号"
                android:inputType="number" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="必         填" />

            <TextView
                style="@style/Flag"
                android:layout_width="40dp"
                android:visibility="invisible" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_edit_member_value_no_empty"
                    style="@style/RadioButton"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/rb_edit_member_value_empty"
                    style="@style/RadioButton"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:text="否" />
            </RadioGroup>

        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="是否显示" />

            <TextView
                style="@style/Flag"
                android:layout_width="40dp"
                android:visibility="invisible" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_edit_member_value_show"
                    style="@style/RadioButton"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:text="是" />

                <RadioButton
                    android:id="@+id/rb_edit_member_value_hide"
                    style="@style/RadioButton"
                    android:drawableStart="@drawable/checkbox_selector"
                    android:text="否" />
            </RadioGroup>

        </LinearLayout>

        <TextView style="@style/LineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewAddMember"
                android:text="数  据  集" />

            <EditText
                android:id="@+id/et_edit_member_data"
                style="@style/EditTextStyleAddMember"
                android:layout_marginStart="10dp"
                android:hint="多个选项用”|“分隔" />
        </LinearLayout>

        <TextView style="@style/LineStyle" />
    </LinearLayout>
</LinearLayout>
