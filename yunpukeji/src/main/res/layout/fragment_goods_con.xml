<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.maimengmami.waveswiperefreshlayout.WaveSwipeRefreshLayout
        android:id="@+id/swf_goodscon_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:above_wave_color="@color/yunpu"
        app:blow_wave_color="@color/yunpu">


        <ListView
            android:id="@+id/lv_goodscon_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="#00000000"
            android:scrollbars="none"

            >

        </ListView>
    </com.maimengmami.waveswiperefreshlayout.WaveSwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitesmoke"
        android:padding="@dimen/loginmagin"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_cart_Allprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="合计:" />

        <TextView
            android:id="@+id/tv_cart_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_cart_Allprice"
            android:singleLine="true"
            android:text="¥ "
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cart_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cart_Allprice"
            android:gravity="right"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="已选0件商品" />

        <TextView
            android:id="@+id/tv_cart_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@color/yunpu"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/homepage"
            android:paddingRight="@dimen/homepage"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:text="结算"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>