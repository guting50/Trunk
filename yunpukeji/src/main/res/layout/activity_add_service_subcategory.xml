<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              android:background="@color/background"
    tools:context="com.zhiluo.android.yunpu.goods.manager.activity.AddGoodsSubCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:background="@color/yunpu">

        <!--<ImageView-->
            <!--android:id="@+id/imv_bigtypeback_activity"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_margin="@dimen/loginmagin"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:background="@mipmap/left_btn_n" />-->

        <include layout="@layout/overall_backbutton_single_head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="新增子分类"
            android:textColor="@color/white"
            android:textSize="@dimen/head_title_font_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主分类名称：" />

        <TextView
            android:id="@+id/tv_bigname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:layout_margin="10dp"
        android:background="@drawable/shape_border_common_radius_stroke"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:text="子分类" />

        <EditText
            android:id="@+id/et_addbig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:hint="子分类名称"
            android:gravity="center_vertical"
            android:textCursorDrawable="@drawable/shape_color_cursor"
            android:textColorHint="@color/lightgray"
            android:textSize="@dimen/edittext_font_size" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_addbig"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:layout_margin="10dp"
        android:background="@drawable/button_selector_yunpu"
        android:text="保存"
        android:textSize="@dimen/big_button_font_size"
        android:textColor="@color/white" />
</LinearLayout>
