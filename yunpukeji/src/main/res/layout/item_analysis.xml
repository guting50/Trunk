<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_order"
        android:layout_width="0dp"
        android:layout_height="@dimen/head_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="1"
        android:textColor="@color/color_item_text_gray"
        android:textSize="@dimen/dimen_main_size"
        android:background="@drawable/goods_analysis_text_bg"/>

    <TextView
        android:id="@+id/tv_item_member_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/head_height"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="1"
        android:singleLine="true"
        android:textColor="@color/color_item_text_gray"
        android:textSize="@dimen/dimen_main_size"
        android:background="@drawable/goods_analysis_text_bg"/>

    <TextView
        android:id="@+id/tv_item_consume_num"
        android:layout_width="0dp"
        android:layout_height="@dimen/head_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="1"
        android:textColor="@color/color_item_text_gray"
        android:textSize="@dimen/dimen_main_size"
        android:background="@drawable/goods_analysis_text_bg"/>

    <TextView
        android:id="@+id/tv_item_consume_money"
        android:layout_width="0dp"
        android:layout_height="@dimen/head_height"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="1"
        android:background="@drawable/goods_analysis_text_bg"
        android:textColor="@color/color_item_text_gray"
        android:textSize="@dimen/dimen_main_size" />
</LinearLayout>
