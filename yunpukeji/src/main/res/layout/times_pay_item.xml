<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="护肤品"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/img_employee_all"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_employee_all"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/down_select"
            android:layout_toLeftOf="@+id/tv_employee_name"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />
        <TextView
            android:id="@+id/tv_employee_name"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_left_counts"
            android:layout_marginRight="10dp"
            android:text="点击选择员工"
            android:textColor="@color/ysl_text_bule"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_left_counts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:text="消费次数:0"
            android:textSize="15sp" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rela"
        android:layout_marginLeft="10dp"
        android:background="@color/ysl_gray" />
</RelativeLayout>