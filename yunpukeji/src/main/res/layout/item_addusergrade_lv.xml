<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/shape_border_common_radius_stroke"
    android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/loginmagin2"
          android:paddingLeft="@dimen/loginmagin2"
          >
          <TextView
              android:id="@+id/tv_titlenameusergrade_lv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/yunpu"
              android:layout_marginRight="@dimen/loginmagin2"
              android:gravity="center"
              />
          <!--<TextView-->
              <!--android:id="@+id/tv_titleotherusergrade_lv"-->
              <!--android:gravity="center_vertical"-->
              <!--android:layout_width="match_parent"-->
              <!--android:layout_height="wrap_content" />-->

      </LinearLayout>

        <!--
        折扣率
        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="@dimen/loginmagin2"
             android:text="折扣率:"
             />
        <com.zhiluo.android.yunpu.ui.view.MyEdittextt
            android:id="@+id/edi_dsvalueaddgrade_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/myborder"
            android:gravity="right|center_vertical"
            android:maxLength="3"
            android:inputType="number"
            android:paddingRight="@dimen/adduser"
            android:singleLine="true"
            android:textColorHint="@color/lightgray"
            android:textCursorDrawable="@null" />

        <!--rs表示充值积分倍率-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/loginmagin2"
            android:text="积分倍率"
            />

        <com.zhiluo.android.yunpu.ui.view.MyEdittextt
            android:id="@+id/edi_rsvalueaddgrade_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/loginmagin2"
            android:layout_height="wrap_content"
            android:background="@drawable/myborder"
            android:gravity="right|center_vertical"
            android:maxLength="3"
            android:inputType="numberDecimal"
            android:paddingRight="@dimen/adduser"
            android:singleLine="true"
            android:textColorHint="@color/lightgray"
            android:textCursorDrawable="@null" />
    </LinearLayout>
</LinearLayout>