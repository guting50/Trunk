<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".unused_fragment.FastConFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hintconsume_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="@dimen/loginmagin"
            android:text="输入总金额进行销售" />

        <EditText
            android:id="@+id/edi_consumeshow_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="bottom|right"
            android:maxLength="7"
            android:textColor="@color/yunpu"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_consumeclean_activity"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_margin="1dp"
            android:background="@mipmap/delete_number"
            android:onClick="onClick"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_consumeseven_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumeeight_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumenine_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="9"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_consumefour_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumefive_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumesix_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="6"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_consumeone_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumetwo_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumethere_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="3"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_consumezero_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumepoint_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="onClick"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_consumeequal_activity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/yunpu"
                android:text="结算"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
